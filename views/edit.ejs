<% layout('layout') %>
    <div class="container">
        <section class="form-section">
            <h1>Edit Post</h1>
            <% if (typeof error !=='undefined' ) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
                <% } %>
                    <form method="POST" class="form">
                        <div class="form-group"> 
                            <label for="title">Post Title*</label> 
                            <input type="text" id="title" name="title" value="<%= post.title %>" placeholder="Enter your post title" required maxlength="200"> 
                            <small>Max 200 characters</small> </div>
                        <div class="form-group"> 
                            <label for="content">Post Content*</label> 
                            <textarea id="content" name="content" placeholder="Write your amazing content here..." required rows="12"><%= post.content %></textarea> 
                            <small>Last updated: <%= new Date(post.updatedAt).toLocaleString() %></small> 
                        </div>
                        <div class="form-actions"> 
                            <button type="submit" class="btn btn-primary">Update Post</button> 
                            <a href="/<%= post.id %>" class="btn btn-secondary">Cancel</a> 
                        </div>
                    </form>
        </section>
    </div>